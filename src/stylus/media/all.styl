// #pixelp
// 	mpd()
// 	position absolute
// 	top 0
// 	left 0
// 	z-index 99999999
// 	opacity .4
// 	user-select none
// 	cursor default


pcolor = #FFC951

bgcolor = #F0F3F6


html, body
	font-size 14px


body
	font-family 'Montserrat',  -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"


h1, .h1, h2, .h2, h3, .h3, h4, .h4, p, .p
	mpd(0 0 15px)
	font-weight 600

h1, .h1
	font-size 2em
	font-weight 600

h2, .h2
	font-size 1.4em
	font-weight 600

h4, .h4
	font-size 1em
	font-weight 600

p, .p
	font-size 1rem
	font-weight 400

.header, .section
	mpd(0, 25px 0 10px)
	


.block-divider
	mpd(0, 36px 0)

.header-top
	mpd(-25px 0 0, 15px 0 1px)
	background bgcolor


.header-body
	mpd(0, 25px 0 10px)


.bg
	background bgcolor


.i-circle-dblue-ln
.i-circle-blue-ln
	mpd(0 0 15px, 0, flex)
	resetLn(white, white)
	align-items center
	justify-content center
	width 30px
	height @width
	border-radius 50%
	line-height 1
	font-size 18px
	overflow hidden


.i-circle-blue-ln
	background #407FBF

.i-circle-dblue-ln
	background #395895


.logo
	mpd(0 0 15px)
	resetLn(black, black)
	text-align center

.logo-txt
	mpd(0 0 5px, 12px)
	border 8px solid pcolor
	font-weight 600
	font-size 32px
	line-height 1

.logo-stxt
	mpd(0, 0 8px)

.logo-icon
	mpd(0 0 0 30px)
	font-size 120px
	color pcolor
	

.nav
	mpd(0 -10px, 0, flex)
	flex-wrap wrap

.nav-ln
	mpd(0 0 15px, 0 10px, flex)
	resetLn(black, black)
	align-items center

.nav-ln:hover > .nav-txt
	color darken(pcolor, 30%)

.nav-ln:hover > .nav-i
	color white
	background darken(pcolor, 10%)

.nav-i
	mpd(0 10px 0 0, 0, flex)
	trans()
	flex 0 0 auto
	justify-content center
	align-items center
	width 36px
	height @width
	border-radius 50%
	background pcolor
	font-size 18px

.nav-txt
	mpd()
	trans()
	width 100%



.btn
.btn-default
	mpd(0 0 15px, 10px 20px)
	resetLn(black, black)
	trans()
	box-sizing border-box
	width 100%
	background pcolor
	border-radius 5px
	text-align center
	user-select none
	cursor pointer

.btn-default:hover
	box-shadow 1px 1px 3px 0 alpha(black, .5)


.btn-sm
	padding 5px 20px


.cart
	mpd(0, 0, flex)
	flex-direction column
	height 100%
	background white
	border-radius 5px
	overflow hidden
	box-shadow 1px 1px 6px 0 alpha(black, .3)


.cart-img-header
	mpd()
	position relative
	padding-top 50%

.cart-img
	mpd()
	position absolute
	top 0
	left 0
	width 100%
	height 100%


.cart-body
	mpd(0, 15px 15px 1px, flex)
	flex-direction column
	flex-grow 1


.cart-footer
	mpd(0 0 -5px 0, 10px 15px 1px)
	border-top 1px solid #CDD0D2


.cart-full-btn
	mpd(0, 30px 15px, flex)
	align-items center
	justify-content center
	border-radius 0
	color white
	font-size 18px
	font-weight 600

.cart-full-btn-i
	mpd(0 20px 0 0)
	font-size 43px






.img-center
	mpd(0 auto 15px)


.img-wrap-circle
	mpd(0 0 15px)
	background url('../img/circle.svg') 50% 50% no-repeat
	background-size auto 100%


.img-wrap-circle > img
	mpd(0 auto)
	max-width 100%
	height auto
	border-radius 0 0 50% 50%


.wall
	mpd(0 0 15px, 15px 15px 1px, flex)
	flex-direction column
	justify-content center
	min-height 120px
	background bgcolor
	border-radius 15px



.mutted
	color gray


.center
	text-align center

.right
	text-align right


for num in (1..100)
	.em-{num}
		font-size (num * .1em)


