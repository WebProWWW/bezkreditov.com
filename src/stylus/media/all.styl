    width 100%
    height 100%
    background alpha(black, 60%)
    color white
    line-height 1.3


.relative
    position relative


.border-header
    border-bottom 1px solid #E3E4E6

.border-header > [class*="col"]
    display flex
    flex-direction column
    justify-content center
    padding-top 15px
    border-right 1px solid #E3E4E6

// .border-header-xl > [class*="col"]:nth-child(2)
//     width 300px !important

.border-header > [class*="col"]:last-child
    border-right none


.img-c
    mpd()
    width 100%
    height auto

.img-c-wrap
    mpd(0 -15px)
    margin-bottom -11px

.img-c-bg
    position relative
    background #EC819D
    overflow hidden


.bg-circle
    position relative
    padding-left 1rem

.bg-circle:before
    content ''
    display block
    width 2.3em
    height @width
    border-radius 50%
    background pcolor
    position absolute
    top 50%
    left 0
    margin-top -1em
    z-index 1


.circle-num
    mpd(0 0 15px, 0, flex)
    align-items center
    justify-content center
    width 2em
    height @width
    border-radius 50%
    background pcolor
    font-weight 600


.circle-i
    mpd(0 0 15px, 0, flex)
    align-items center
    justify-content center
    width 2em
    height @width
    border-radius 50%
    background pcolor
    font-weight 600


.blockquote-right
    border-right .3em solid pcolor
    padding-right 15px


.circle-list
    display flex
    align-items center
    // padding-left 3.2em

.circle-list:before
    mpd(0 15px 0 0, 0, flex)
    align-items center
    justify-content center
    width 2em
    height @width
    border-radius 50%
    background pcolor
    font-size 1.3em
    font-weight 600

.circle-list:after
    content ''
    display block
    height 1px
    clear both

.circle-list-txt
    mpd()
    flex-basis 0
    flex-grow 1


for child in (1..10)
    .circle-list:nth-child({child}):before
        content ('' + child)



.sale-gray
.sale-primary
    mpd(0 0 0 .8em, .5em .5em .5em 0, inline-block)
    position relative
    background #DADFE5
    height 2em
    line-height 1
    text-align center

.sale-gray:before
    arrowToLeft(.8em, 2em, #DADFE5)
    content ''
    display block
    position absolute
    margin-top -.5em
    margin-left -.75em

.sale-primary
    background pcolor

.sale-primary:before
    arrowToLeft(.8em, 2em, pcolor)
    content ''
    display block
    position absolute
    margin-top -.5em
    margin-left -.8em


.pointer
    cursor pointer
    user-select none



.i-down-trans > .i-down
    trans()

.i-down-trans.active > .i-down
    transform rotate(180deg)


for w in (1..10)
    wPx = w * 1px
    .border-primary-{w}
        border wPx solid pcolor
    .border-gray-{w}
        border wPx solid #C7C9CC

for r in (1..50)
    .border-radius-{r}
        border-radius (r * 1px)

for zi in (1..100)
    .z-{zi}
        z-index zi


for num in (1..100)
    .em-{num}
        font-size (num * .1em)

for rem in (1..100)
    .rem-{rem}
        font-size (rem * .1rem)



for fw in 300 400 600 700
    .fw-{fw}
        font-weight fw


for lh in (10..100)
    .lh-{lh}
        line-height (lh * .1)


.sms
    mpd(0 0 15px, 10px 15px)
    position relative
    background #2380FE
    color white
    font-weight 300
    font-size 13px
    border-radius 16px


.sms:before
    mpd()
    content ''
    position absolute
    width 16px
    height 20px
    bottom 0
    right -6px
    background url('../img/sms-arr.svg') 0 100% no-repeat


.last-child-none:last-child
    display none !important