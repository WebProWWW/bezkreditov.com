pcolor = #FFC951

bgcolor = #F0F3F6

html, body
	height 100%
	font-size 14px


body
	font-family 'Montserrat', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"


h1, .h1, h2, .h2, h3, .h3, h4, .h4, p, .p
	mpd(0 0 15px)
	font-weight 600

h1, .h1
	font-size 2em
	font-weight 600

h2, .h2
	font-size 1.4em
	font-weight 600

h4, .h4
	font-size 1em
	font-weight 600

p, .p
	font-size 1rem
	font-weight 400

a
	outline none
	cursor pointer


label
	user-select none
	cursor pointer


.full-height
	mpd(0, 0, flex)
	flex-direction column
	min-height 100%


.header, .section
	mpd(0, 25px 0 10px)



.block-divider
	mpd(0, 36px 0)

.header-top
	mpd(-25px 0 0, 15px 0 1px)
	background bgcolor


.header-body
	mpd(0, 25px 0 10px)


.bg
	background bgcolor

.bg-primary
	background pcolor

.i-circle-dblue-ln
.i-circle-blue-ln
	mpd(0 0 15px, 0, flex)
	resetLn(white, white)
	align-items center
	justify-content center
	width 30px
	height @width
	border-radius 50%
	line-height 1
	font-size 18px
	overflow hidden


.i-circle-blue-ln
	background #407FBF

.i-circle-dblue-ln
	background #395895


.logo
	mpd(0 0 15px)
	resetLn(black, black)
	text-align center

.logo-txt
	mpd(0 0 5px, 12px)
	border 8px solid pcolor
	font-weight 600
	font-size 30px
	line-height 1

.logo-stxt
	mpd(0, 0 8px)
	font-size .9rem

.logo-icon
	mpd(0 0 0 30px)
	font-size 120px
	color pcolor

.logo-lg > .logo-txt
	border 11px solid pcolor
	font-size 43px



.nav
	mpd(0 -10px, 0, flex)
	flex-wrap wrap

.nav-ln
	mpd(0 0 15px, 0 10px, flex)
	resetLn(black, black)
	align-items center

.nav-ln:hover > .nav-txt
	color darken(pcolor, 30%)

.nav-ln:hover > .nav-i
	color white
	background darken(pcolor, 10%)

.nav-i
	mpd(0 10px 0 0, 0, flex)
	trans()
	flex 0 0 auto
	justify-content center
	align-items center
	width 36px
	height @width
	border-radius 50%
	background pcolor
	font-size 18px

.nav-txt
	mpd()
	trans()
	width 100%



.toggle-btn
	mpd(0 0 15px, 0, flex)
	flex-direction column
	align-items center
	user-select none
	cursor pointer

.toggle-i
	mpd(0, 0, flex)
	b(3, pcolor)
	align-items center
	justify-content center
	border-radius 50%
	width 50px
	height @width
	font-size 28px

.toggle-txt
	mpd()
	font-weight 600
	font-size 16px


.toggle
	display none


.btn
.btn-default
.btn-trsp
	mpd(0 0 15px, 10px 20px)
	resetLn(black, black)
	trans()
	box-sizing border-box
	width 100%
	background pcolor
	border-radius 5px
	text-align center
	user-select none
	cursor pointer

.btn-trsp:hover
.btn-default:hover
	box-shadow 1px 1px 3px 0 alpha(black, .5)


.btn-trsp
	b(1, pcolor)
	padding 8px 18px
	background transparent

.btn-trsp:hover
	background pcolor


.btn-sm
	padding 5px 20px


.btn-trsp.btn-sm
	padding 4px 19px


.wall-divider
	mpd(0 0 15px)
	box-sizing border-box
	height 2px
	background #E7EAED
	border-bottom 1px solid white

.wall
	mpd(0 0 15px, 15px 15px 1px, flex)
	flex-direction column
	justify-content center
	min-height 120px
	background bgcolor
	border-radius 15px


.wall-white
	mpd(0 0 15px, 15px 15px 1px, flex)
	flex-direction column
	justify-content center
	min-height 120px
	background bgcolor
	border-radius 15px
	background white

.wall-dark
	mpd(0 0 15px, 15px 15px 1px)
	background bgcolor
	border-radius 15px
	.wall-divider
		background lighten(#B1B6B4, 45%)


.img-a
	mpd(0 auto 15px)
	max-width 100%
	height auto


.cart
	mpd(0, 0, flex)
	flex-direction column
	height 100%
	background white
	border-radius 5px
	overflow hidden
	box-shadow 1px 1px 6px 0 alpha(black, .3)


.cart-img-header
	mpd()
	position relative
	padding-top 80%

.cart-img
	mpd()
	position absolute
	top 0
	left 0
	width 100%
	height 100%


.cart-body
	mpd(0, 15px 15px 1px, flex)
	flex-direction column
	flex-grow 1

.carg-body-bg
	mpd(0, 15px 15px 1px, flex)
	flex-direction column
	flex-grow 1
	background bgcolor

.cart-footer
	mpd(0 0 -5px 0, 10px 15px 1px)
	border-top 1px solid #CDD0D2


.cart-full-btn
	mpd(0, 30px 15px, flex)
	align-items center
	justify-content center
	border-radius 0
	color white
	font-size 18px
	font-weight 600

.cart-full-btn-i
	mpd(0 20px 0 0)
	font-size 43px






.img-center
	mpd(0 auto 15px)
	max-width 100%
	height auto


.img-wrap-circle
	mpd(0 0 15px)
	background url('../img/circle.svg') 50% 50% no-repeat
	background-size auto 100%


.img-wrap-circle > img
	mpd(0 auto)
	max-width 100%
	height auto
	border-radius 0 0 50% 50%


.breadcrubmbs
	mpd(0 0 15px, 0, flex)
	flex-wrap wrap
	font-size 13px


.breadcrubmbs-ln
	mpd()
	resetLn(black, black)
	trans()

.breadcrubmbs-ln:after
	content '/'
	margin 0 8px

.breadcrubmbs-ln:hover
	color pcolor

.breadcrubmbs-ln:hover:after
	color black

.breadcrubmbs-ln > i
	color pcolor
	font-size 1.1em

.breadcrubmbs-ln:last-child:after
	display none


.label
	mpd(0 0 3px)
	font-size .9rem


.sselect
	mpd()
	position relative


.sselect-options
	mpd(15px 0 0, 12px 15px)
	top 100%
	left 0
	right 0
	max-height 350px
	position absolute
	border-radius 5px
	background white
	z-index 100
	box-shadow 1px 1px 6px 0 alpha(black, .3)
	overflow-y auto
	display none

.sselect-options.active
	display block

.sselect-option
	mpd(0, 3px 0)
	trans()
	font-size .9em
	user-select none
	cursor pointer

.sselect-option:hover
.sselect-option.selected
	color pcolor

.sselect-option.selected:before
	mpd(.5em .5em 0 0)
	content ''
	float left
	width .4em
	height @width
	border-radius 50%
	background black

.sselect-option.disabled
	cursor default
	font-weight 600
	font-size 1.1em


.input
	appearance none
	outline none
	mpd(0 0 15px, 8px 15px)
	b(1, #C7C9CC)
	trans()
	box-sizing border-box
	border-radius 5px
	width 100%
	background white
	font-size 1rem

.input:focus
	b(1, pcolor)

.input.error
	b(1, red)


.gj-icon
	margin 5px 3px 0 0


.radio
	appearance none
	outline none
	mpd(0 10px 0 0, 0, flex)
	b(1, #C7C9CC)
	trans()
	align-items center
	justify-content center
	width 36px
	height @width
	border-radius 50%
	background white
	vertical-align middle
	user-select none
	cursor pointer

.radio:before
	trans()
	content ''
	width 20px
	height @width
	background white
	border-radius 50%

.radio:checked
	b(1, pcolor)

.radio:checked:before
	background pcolor


.checkbox
	appearance none
	outline none
	mpd(0 10px 0 0, 0, flex)
	b(1, #C7C9CC)
	trans()
	align-items center
	justify-content center
	width 36px
	height @width
	border-radius 50%
	background white
	vertical-align middle
	user-select none
	cursor pointer

.checkbox:before
	trans()
	content ''
	width 23px
	height @width
	background url('../img/check.svg') 50% 50% no-repeat
	transform scale(0)

.checkbox:checked
	b(1, pcolor)

.checkbox:checked:before
	transform scale(1)


.checkbox.error
	b(1, red)

.input-error
	mpd(-13px 0 15px)
	font-weight 400
	font-size .8rem
	color red


.yur
	mpd(0 0 15px)
	position relative
	width 60px
	height 60px
	&:after
		content ''
		position absolute
		top 2px
		right @top
		width 12px
		height @width
		border-radius 50%
		background #00D695

.yur-img
	mpd()
	max-width 100%
	border-radius 50%


.date-bg
	background pcolor
	padding 5px 8px


.bg-eo:nth-child(even)
	background bgcolor

.ava
	mpd(0 auto 15px, 6px)
	b(6, white)
	width 120px
	height @width
	box-sizing border-box
	border-radius 50%
	background bgcolor

.ava-img
	mpd()
	b(6, white)
	box-sizing border-box
	width 100%
	height auto
	max-width 100%
	border-radius 50%


.rate
	mpd(0 -3px 15px, 0, flex)
	flex-direction row-reverse


.rate-star-ln
	mpd(0, 0 3px)
	resetLn(gray, pcolor)
	trans()

.rate-star-ln:hover ~ .rate-star-ln
	color pcolor

.rate-star-i
	mpd()
	font-size 23px
	line-height 1


.divider-h
	mpd(0 0 15px)
	height 1px
	background #E9EBEC

.divider-v
	mpd(0 15px)
	width 1px
	height 100%
	background #E9EBEC


.divider-dark
	mpd(0 0 15px)
	box-sizing border-box
	width 100%
	height 1px
	background #C7C9CC


.divider-dark-v
	mpd(0 15px)
	width 1px
	height 100%
	background #C7C9CC


.klogo
	mpd(0 auto 15px)
	max-width 100%
	height auto


.percent
	mpd(0 0 15px, 8px 15px)
	b(1, darken(#29E334, 30%))
	position relative
	border-radius 5px
	overflow hidden

.percent-value
	mpd()
	position absolute
	top 0
	left 0
	bottom 0
	width 0
	background #29E334
	z-index 5

.percent-txt
	mpd()
	position relative
	z-index 10
	text-align center


.team-img
	mpd(0 auto 15px)
	max-width 100%
	height auto
	border-radius 50%



.img
	mpd(0 0 15px)
	max-width 100%
	height auto


.editor
	img
		max-width 100%
	blockquote
		mpd(0 0 15px, 15px 15px 1px)
		background bgcolor
		border-left 3px solid pcolor
	ul
		mpd(0 0 10px, 0 0 1px)
		li
			mpd(0 0 5px, 0 0 0 1.1em)
			list-style none
		li:before
			mpd(.5em 0 0 -1.1em)
			content ''
			width .5em
			height @width
			border-radius 50%
			background pcolor
			float left
		li:after
			mpd()
			content ''
			height 1px
			clear both
	ol
		margin-bottom 5px
		padding-bottom 1px
		li
			margin-bottom 10px
			a
				mpd(0, 0, inline-block)
				trans()
				resetLn(black, pcolor)
				border-bottom 1px dotted #B8B8B8
				&:hover
					border-bottom 1px dotted pcolor
		ol
			margin-bottom 0
			padding-bottom 0
			margin-top 10px
	// ol
	// 	mpd(0 0 10px, 0 0 1px)
	// 	li
	// 		mpd(0 0 5px)
	// 	ol
	// 		mpd(5px 0 0)




.list
	mpd(0 0 15px)

.list-item
	mpd(0 -15px, 15px 0 0, flex)
	resetLn(black, black)
	trans()
	flex-wrap wrap

.list-item:hover
	box-shadow 0 0 13px 0 alpha(black, .3)
	position relative

.list-item:nth-child(even)
	background bgcolor



.pagination
	mpd(0 -8px 15px, 0, flex)
	list-style none

.pagination > li
	mpd()
	list-style none
	font-weight 400
	font-size 18px
	line-height 1

.pagination > li > a
	mpd(0, 0 8px)
	trans()
	resetLn(black, pcolor)

.pagination > li.disabled
	padding 0 8px
	opacity .5

.pagination > li.active > a
	color pcolor

.pagination > li i
	font-size .8em


.ln-black-primary
	trans()
	resetLn(black, pcolor)



.td-line
	text-decoration underline


.mutted
	color gray

.primary
	color pcolor

.red
	color red

.green
	color #00E449

.center
	text-align center

.right
	text-align right


.ws-nowrap
	white-space nowrap


.map-tmp
	mpd(0 0 15px)
	height 300px
	background url('../img/map.jpg') 50% 50% no-repeat
	background-size cover
	// background darken(bgcolor, 13%)



.modal
	width 100%
	min-height 100%
	max-width 1250px


.modal-sm
	padding 40px 25px 10px
	max-width 450px
	min-height auto
	height auto


.test-modal
	width 100%
	max-width 700px

// .test-header
// 	mpd(0 0 15px)
// 	position relative

.test-title
	mpd(0 0 15px)
	text-align center

.test-title:after
	mpd(15px 0 0)
	content ''
	height 3px
	background pcolor

.test-progress
	mpd()
	trans()
	position absolute
	height 3px
	left 0
	bottom 0
	background pcolor


.fade-enter-active, .fade-leave-active
	transition opacity .3s ease

.fade-enter, .fade-leave-to
	// .component-fade-leave-active до версии 2.1.8
	opacity 0


.relative
	position relative


for num in (1..100)
	.em-{num}
		font-size (num * .1em)


for fw in 300 400 600 700
	.fw-{fw}
		font-weight fw




.news-img
	mpd(0 30px 15px 0)
	width 100%
	height auto
